<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_order_food"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_number"
                android:text="28/04/2020 13:05:06"
                android:textColor="@android:color/holo_blue_dark"
                android:fontFamily="@font/righteous"
                android:textStyle="italic"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_time"
                android:text="Order date: "
                android:fontFamily="@font/righteous"
                android:textStyle="italic"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Mufti"
                android:id="@+id/txt_order_name"
                android:fontFamily="@font/righteous"
                android:textStyle="italic"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_status"
                android:text="Order status: Placed"
                android:fontFamily="@font/righteous"
                android:textStyle="italic"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_num_item"
                android:text="Num of item: 10"
                android:fontFamily="@font/righteous"
                android:textStyle="italic"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
